<div class="new-post">
  <div class="contents">
    <div class="form">
      <%= form_with(model: @post, local: true) do |form| %>
        <h3>
          とうこうする？
        </h3>
      <div class="form">
        <%= form.text_field :title, placeholder: "Title" %>
        <%= form.text_area :content, placeholder: "内容を入力して下さい", rows:"50" %>
        <%= form.text_field :image, placeholder: "image"%>
        <%= form.submit "投稿！" %>

        <%= link_to "とっぷぺーじにもどる", root_path, class: "btn" %>
      <% end %>
      </div>
    </div>
  </div>
